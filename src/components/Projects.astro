---
const projects = [
  {
    title: "SafeStep",
    description: "A comprehensive walking route safety platform using ML-powered hazard detection (YOLOv8) and intelligent pathfinding to help pedestrians navigate safely with accessibility-focused routing.",
    tags: ["Java", "Spring Boot", "React", "TypeScript", "YOLOv8", "PostgreSQL", "FastAPI"],
    link: "https://github.com/AndyDo0942/SafeStep",
    demo: "",
    featured: true,
  },
  {
    title: "MarketSent",
    description: "Financial sentiment analysis dashboard monitoring Reddit discussions (r/wallstreetbets, r/stocks) using FinBERT AI to gauge real-time investor sentiment toward stock tickers with interactive trend charts.",
    tags: ["React", "TypeScript", "Python", "Flask", "FinBERT", "PostgreSQL"],
    link: "https://github.com/JDKrasnick/MarketSent",
    demo: "",
    featured: true,
  },
  {
    title: "Recollect",
    description: "A conversational RAG system for intelligent document Q&A using Claude AI and vector embeddings. Features semantic search, multi-turn conversations with persistent memory, and automatic session summarization.",
    tags: ["Python", "Claude API", "ChromaDB", "SQLite", "Sentence Transformers"],
    link: "https://github.com/JDKrasnick/Recollect",
    demo: "",
    featured: true,
  },
  {
    title: "Brain-Computer Interface",
    description: "Lilley Fellowship research project engineering a BCI system that interprets EEG signals to control a robotic arm. Features real-time signal processing using FFT algorithms, electrode data analysis, and embedded control logic.",
    tags: ["Python", "FFT", "EEG", "Raspberry Pi", "Arduino", "Signal Processing"],
    link: "",
    demo: "",
    featured: false,
  },
  {
    title: "Cornell Lab Matchmaker",
    description: "AI-powered research matchmaking tool helping Cornell students discover and connect with faculty researchers through semantic search and intelligent query handling via web scraping and embeddings.",
    tags: ["Python", "Streamlit", "Embeddings", "Web Scraping"],
    link: "https://github.com/JDKrasnick/Cornell_Research_Agent",
    demo: "",
    featured: false,
  },
];
---

<section class="projects" id="projects">
  <div class="container">
    <div class="section-label reveal">Projects</div>
    <h2 class="section-title reveal reveal-delay-1">Selected Work</h2>
    <p class="section-subtitle reveal reveal-delay-2">
      A collection of projects I've built and contributed to.
    </p>

    <div class="projects-grid">
      {projects.map((project, i) => (
        <div class={`project-card ${project.featured ? 'featured' : ''} reveal reveal-delay-${(i % 4) + 1}`}>
          <div class="project-header">
            <svg class="project-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/></svg>
            <div class="project-links">
              {project.link && (
                <a href={project.link} target="_blank" rel="noopener noreferrer" aria-label="Source code" class="project-link-icon">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                </a>
              )}
              {project.demo && project.demo !== '#' && (
                <a href={project.demo} target="_blank" rel="noopener noreferrer" aria-label="Live demo" class="project-link-icon">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
                </a>
              )}
            </div>
          </div>
          <h3 class="project-title">{project.title}</h3>
          <p class="project-desc">{project.description}</p>
          <div class="project-tags">
            {project.tags.map(tag => (
              <span class="project-tag">{tag}</span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-top: 3rem;
  }

  .project-card {
    padding: 2rem;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition: all var(--transition-med);
  }

  .project-card:hover {
    border-color: var(--border-hover);
    transform: translateY(-4px);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.3);
  }

  .project-card.featured {
    border-color: rgba(59, 130, 246, 0.15);
  }

  .project-card.featured:hover {
    border-color: rgba(59, 130, 246, 0.3);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.3), 0 0 24px var(--accent-glow);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .project-icon {
    color: var(--accent);
  }

  .project-links {
    display: flex;
    gap: 0.75rem;
  }

  .project-link-icon {
    color: var(--text-muted);
    transition: color var(--transition-fast);
  }
  .project-link-icon:hover {
    color: var(--accent);
  }

  .project-title {
    font-size: 1.2rem;
    font-weight: 600;
  }

  .project-desc {
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.6;
    flex: 1;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .project-tag {
    font-family: var(--font-body);
    font-size: 0.75rem;
    padding: 0.25rem 0.6rem;
    border-radius: 4px;
    background: var(--bg-secondary);
    color: var(--accent);
    border: 1px solid rgba(59, 130, 246, 0.1);
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
