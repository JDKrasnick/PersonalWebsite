---
const skillCategories = [
  {
    title: "Languages",
    skills: ["Python", "TypeScript", "JavaScript", "C++", "SQL", "HTML/CSS"],
  },
  {
    title: "Frontend",
    skills: ["React", "Vite", "Streamlit", "React Router"],
  },
  {
    title: "AI / Machine Learning",
    skills: ["PyTorch", "TensorFlow", "Keras", "Hugging Face", "OpenAI", "MediaPipe", "OpenCV", "FinBERT"],
  },
  {
    title: "Backend & Data",
    skills: ["RESTful APIs", "FastAPI", "Flask", "PostgreSQL", "SQLite", "ChromaDB", "Supabase", "Pandas"],
  },
  {
    title: "Tools & Deployment",
    skills: ["Git", "Vercel", "Render"],
  },
];

function toFileName(name: string): string {
  return name
    .toLowerCase()
    .replace(/\+\+/g, "-plus-plus")
    .replace(/\//g, "-")
    .replace(/\s+/g, "-");
}
---

<section class="skills" id="skills">
  <div class="container">
    <div class="section-label reveal">Skills</div>
    <h2 class="section-title reveal reveal-delay-1">Tech Stack</h2>
    <p class="section-subtitle reveal reveal-delay-2">
      Technologies and tools I work with to bring ideas to life.
    </p>

    <div class="skills-grid">
      {skillCategories.map((cat, i) => (
        <div class={`skill-category reveal reveal-delay-${(i % 4) + 1}`}>
          <h3 class="category-title">{cat.title}</h3>
          <div class="skill-tags">
            {cat.skills.map(skill => (
              <span class="skill-tag">
                <img
                  class="skill-icon"
                  src={`/icons/skills/${toFileName(skill)}.svg`}
                  alt=""
                  width="16"
                  height="16"
                  loading="lazy"
                />
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .skills {
    background: var(--bg-secondary);
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    margin-top: 3rem;
  }

  .skill-category {
    padding: 2rem;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    transition: border-color var(--transition-fast), transform var(--transition-fast);
  }

  .skill-category:hover {
    border-color: var(--border-hover);
    transform: translateY(-2px);
  }

  .category-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1.25rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--border-color);
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill-tag {
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
    padding: 0.4rem 0.85rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 6px;
    font-size: 0.85rem;
    color: var(--text-secondary);
    font-family: var(--font-heading);
    transition: all var(--transition-fast);
  }

  .skill-tag:hover {
    border-color: var(--accent);
    color: var(--accent);
    background: var(--accent-glow);
  }

  .skill-icon {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
    /* Default: muted gray (#666666) */
    filter: invert(40%) sepia(0%) saturate(0%) brightness(90%);
    transition: filter var(--transition-fast);
  }

  .skill-tag:hover .skill-icon {
    /* Accent blue (#3B82F6) */
    filter: invert(44%) sepia(83%) saturate(1770%) hue-rotate(206deg) brightness(101%) contrast(94%);
  }

  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .skill-category {
      padding: 1.5rem;
    }
  }
</style>
