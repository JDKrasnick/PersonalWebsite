<style>
  .skills {
    background: var(--bg-secondary);
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    margin-top: 3rem;
  }

  .skill-category {
    padding: 2rem;
